<Page x:Class="equip.frames.AdminMenu"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:equip.frames"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AdminMenu">

    <Grid Background="LightSlateGray">
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Button Background="LightBlue" FontFamily="Yu Gothic UI Semibold" Content="Список оборудования" Grid.Column="0"  Click="Button_Click" Height="45" VerticalAlignment="Center"  FontSize="18"/>
        <Button Background="LightBlue" FontFamily="Yu Gothic UI Semibold" Content="Статус оборудования" Grid.Column="1" Click="Button_Click_1" Height="45" VerticalAlignment="Center"  FontSize="18"/>
        <Button Background="LightBlue" FontFamily="Yu Gothic UI Semibold" Content="История входов" Grid.Column="2"  Click="Button_Click_2" Height="45" VerticalAlignment="Center" FontSize="18"/>
    </Grid>
</Page>
