<Page x:Class="equip.frames.Auth"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:equip.frames"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Auth">

    <Grid Background="LightSlateGray">
        <StackPanel VerticalAlignment="Top" HorizontalAlignment="Center" Margin="0,70,0,0">
            <Label FontStyle="Italic" Background="AliceBlue" Content="Управление оборудованием" FontSize="25" FontFamily="Yu Gothic UI Semibold"/>
        </StackPanel>
        <StackPanel Background="AliceBlue" Width="350" VerticalAlignment="Center" HorizontalAlignment="Center" Height="132" Margin="225,164,225,154">
            <Label Content="Логин" HorizontalAlignment="Center" FontFamily="Yu Gothic UI Semibold"/>
            <TextBox x:Name="TxbLogin" Width="200"/>
            <Label Content="Пароль" HorizontalAlignment="Center" FontFamily="Yu Gothic UI Semibold"/>
            <PasswordBox x:Name="TxbPassword" Width="200"/>
            <Button Background="LightBlue" FontFamily="Yu Gothic UI Semibold" Height="25" Width="150" Margin="0,10,0,0" Content="Вход" Click="Login_Click"/>
        </StackPanel>
    </Grid>
</Page>
